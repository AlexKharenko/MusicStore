<div>
    <label for="">Title</label>
    <input type="text" name="name" value="<%= audio.title %>">
</div>
<div>
    <label for="">Author</label>
    <select name="author">
        <% authors.forEach(author => { %>
            <% if(author.id === audio.author) {%> 
                <option selected label="<%= author.name %>" value="<%= author.id %>"></option>
            <% } else { %> 
                <option label="<%= author.name %>" value="<%= author.id %>"></option>
            <% } %> 
        <% }); %>
    </select>
</div>
<div>
    <label for="">Publish Date</label>
    <input type="date" name="publishDate" 
    value="<%= audio.publishDate == null ? '' : audio.publishDate.toISOString().split('T')[0] %>">
</div>
<div>
    <label for="">Cover</label>
    <input type="file" name="cover">
</div>
<div>
    <label for="">Lyrics</label>
    <textarea name="lyrics" ><%= audio.lyrics %></textarea>
</div>
<div>
    <label for="">Audio</label>
    <input type="file" name="audiofile">
</div>